\begin_inset Formula 
\begin{equation}
\textcolor{blue}{ U(x+\Delta x)=U(x) + \frac{\partial U}{\partial x} \Delta x + \frac{1}{2!} \frac{\partial^{2}U}{\partial x^{2}}\Delta x^{2} +\textcolor{red}{O(\Delta x^{3})} }
\end{equation}

